---
import { CollectionEntry, getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

export async function getStaticPaths() {
  const docs = await getCollection("docs");
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { ...doc },
  }));
}

type Props = CollectionEntry<"docs">;
const doc = Astro.props;
const { Content, headings } = await doc.render();

/**
 * Pass `headings` as a property to be readable from `Astro.props` in `Layout`.
 * Otherwise, only files that manually reference `Layout` (index, 404, and test)
 * would be able to read it. (Not sure why).
 */
---

<Layout {...{ ...doc.data, headings }}>
  <Content />
</Layout>
