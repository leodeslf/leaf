---
import { CollectionEntry, getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

export async function getStaticPaths() {
  const notes = await getCollection("notes");
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { ...note },
  }));
}

type Props = CollectionEntry<"notes">;
const note = Astro.props;
const { Content, headings } = await note.render();

/**
 * Pass `headings` as a property to be readable from `Astro.props` in `Layout`.
 * Otherwise, only files that manually reference `Layout` (index, 404, and test)
 * would be able to read it. (Not sure why).
 */
---

<Layout {...{ ...note.data, headings }}>
  <Content />
</Layout>
